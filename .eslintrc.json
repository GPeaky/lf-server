{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "globals": {
        "mp": "writable",
        "process": "readonly"
    },
    "rules": {
        "func-style": [
            "error",
            "declaration",
            {
                "allowArrowFunctions": true
            }
        ],
        "no-var": "error", // Disable var because it's not supported in es2021
        "prefer-const": "error", // Suggest user to use const when is possible
        "prefer-template": "error", // Force user to use template string instead of concatenation
        "no-undef": "error" // Disable undefined variable
    }
}
