{
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "tsx": false,
            "decorators": true,
            "dynamicImport": true
        },

        "transform": {
            "legacyDecorator": true,
            "decoratorMetadata": true,

            "optimizer": {
                "simplify": true,
                "globals": {
                    "vars": {
                        "process.env.NODE_ENV": "production"
                    }
                },

                "jsonify": {
                    "minCost": 600
                }
            }
        },

        "minify": {
            "compress": true,
            "mangle": true
        },

        "target": "es2022",
        "paths": {
            "@config/*": ["src/server/config/*"]
        },

        "baseUrl": "./"
    },

    "sourceMaps": false,
    "minify": true,
    "module": {
        "type": "commonjs"
    }
}
